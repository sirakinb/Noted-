generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id // Clerk user ID
  email         String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Subscription info - aligned with Clerk billing
  subscriptionTier     String?   @default("free") // "free", "trial", "starter", "pro"
  subscriptionStatus   String?   @default("active") // "active", "canceled", "past_due", "inactive"
  subscriptionId       String?   // Stripe subscription ID (if paid plan)
  subscriptionEndsAt   DateTime? // When subscription expires
  
  // Clerk integration
  clerkPlanId          String?   // Plan ID stored in Clerk publicMetadata
  lastSyncedAt         DateTime? // Last time we synced with Clerk
  
  // Usage tracking (optional - can be handled by Redis rate limiting)
  monthlyMinutesUsed   Int?      @default(0)
  monthlyTransformationsUsed Int? @default(0)
  usageResetAt         DateTime? // When usage counters reset
  
  @@map("users")
}

model Whisper {
  id                String       @id @default(uuid())
  title             String
  userId            String
  createdAt         DateTime     @default(now())
  fullTranscription String
  audioTracks       AudioTrack[]

  transformations Transformation[]
}

model Transformation {
  id           String   @id @default(uuid())
  whisperId    String
  whisper      Whisper? @relation(fields: [whisperId], references: [id])
  isGenerating Boolean  @default(true)
  typeName     String
  text         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AudioTrack {
  id                   String   @id @default(uuid())
  fileUrl              String
  partialTranscription String
  createdAt            DateTime @default(now())
  whisper              Whisper  @relation(fields: [whisperId], references: [id])
  whisperId            String
  language             String? // Added for language selection
}
